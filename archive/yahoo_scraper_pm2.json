{
  "apps": [
    {
      "name": "yahoo-scraper",
      "script": "yahoo_env/bin/python",
      "args": "yahoo_scraper_production_ready.py",
      "cwd": "/home/ubuntu/baseball-ai-media",
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "restart_delay": 10000,
      "max_restarts": 50,
      "min_uptime": "30s",
      "kill_timeout": 10000,
      "log_file": "logs/yahoo-scraper.log",
      "error_file": "logs/yahoo-scraper-error.log",
      "out_file": "logs/yahoo-scraper-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "env": {
        "NODE_ENV": "production",
        "TZ": "Asia/Tokyo"
      }
    }
  ]
}