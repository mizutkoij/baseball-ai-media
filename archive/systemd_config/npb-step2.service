[Unit]
Description=NPB Step2 Index Extract (polite)
After=network-online.target

[Service]
Type=oneshot
EnvironmentFile=/etc/default/npb-scraper
WorkingDirectory=%E{BASE_DIR}
Environment=TZ=%E{TZ}
ExecStart=/bin/bash -lc 'source %E{VENV}/bin/activate && python scripts/step_2_index_extractor_polite.py'
Nice=10
IOSchedulingClass=best-effort